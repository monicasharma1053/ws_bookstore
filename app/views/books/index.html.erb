<h1>Listing books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Price</th>
    <th>Isbn</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= book.price %></td>
    <td><%= book.isbn %></td>
    <% if @order %>
    <td><%= link_to 'Remove', remove_book_path(@order, book), method: :post %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <% else %>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>

  </tr>
<% end %>
</table>

<br />


<%= link_to 'Home', root_path, method: :get %>
<% if params[:order_number] %>
    <%= link_to 'Order Details', order_path(params[:order_number]) %>
    <%= link_to 'All Orders', orders_path %>
    <%= link_to 'Add Books', order_books_browse_path(params[:order_number]) %>
<% else %>
<%= link_to 'New Book', new_book_path %>
<% end %>